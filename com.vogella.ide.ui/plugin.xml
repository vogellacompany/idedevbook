<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="com.vogella.ide.ui.fragment"
         point="org.eclipse.e4.workbench.model">
      <fragment
            apply="notexists"
            uri="fragment.e4xmi">
      </fragment>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="todo"
            id="todo"
            name="Todo"
            priority="high">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editorContentTypeBinding
            contentTypeId="com.vogella.ide.ui.todo"
            editorId="org.eclipse.ui.genericeditor.GenericEditor">
      </editorContentTypeBinding>
   </extension>
   <extension
         point="org.eclipse.ui.genericeditor.contentAssistProcessors">
      <contentAssistProcessor
            class="com.vogella.ide.ui.editors.TodoPropertiesContentAssistProcessor"
            contentType="com.vogella.ide.ui.todo">
      </contentAssistProcessor>
      <contentAssistProcessor
            class="com.vogella.ide.ui.editors.DependentTodoProcessor"
            contentType="com.vogella.ide.ui.todo">
      </contentAssistProcessor>
   </extension>
   <extension
         point="org.eclipse.ui.genericeditor.presentationReconcilers">
      <presentationReconciler
            class="com.vogella.ide.ui.editors.PropertiesReconciler"
            contentType="com.vogella.ide.ui.todo">
      </presentationReconciler>
   </extension>
   <extension
         point="org.eclipse.core.filebuffers.documentSetup">
      <participant
            class="com.vogella.ide.ui.editors.TodoMarkerDocumentSetup"
            contentTypeId="com.vogella.ide.ui.todo">
      </participant>
   </extension>

</plugin>
